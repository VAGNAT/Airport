@model Ticket
@{
    ViewData["Title"] = "Ticket";
    string namePicture = @ViewBag.City + 1 + ".jpg";
}

<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img style="height:500px" class="d-block w-100" src="/img/City/@namePicture" alt="@ViewBag.City">
            <div class="carousel-caption d-none d-md-block main text-white">
                <h3 class="display-3">@ViewBag.City</h3>
                <h1>Отличный выбор</h1>
            </div>
        </div>
        @for (int i = 2; i <= 3; i++)
        {
            namePicture = ViewBag.City + i + ".jpg";

            <div class="carousel-item">
                <img style="height:500px" class="d-block w-100" src="/img/City/@namePicture" alt="@ViewBag.City">
                <div class="carousel-caption d-none d-md-block">
                    <h3 class="display-3">@ViewBag.City</h3>
                    <h1>Отличный выбор</h1>
                </div>
            </div>
        }
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
<br />
<div class="container">
    <form asp-action="Ticket" method="post">
        <div class="row">
            <div class="form-group col-md-6">
                <input asp-for="City" readonly class="form-control" placeholder="Город">
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <input readonly class="form-control" type="date" asp-for="DateStart" value="@ViewBag.DateStart.ToString("yyyy-MM-dd")" placeholder="Дата вылета">
                <span asp-validation-for="DateStart" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="form-group col-md-6">
                <input asp-for="Name" class="form-control" placeholder="Имя">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <input asp-for="LastName" class="form-control" placeholder="Фамилия">
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="form-group col-md-6">
                <select asp-for="Company" asp-items="@ViewBag.SelectItems" class="form-control"></select>
                <span asp-validation-for="Company" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <input asp-for="Email" class="form-control" placeholder="E-mail">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>
        <input type="submit" value="Полетели" class="btn btn-primary" />
    </form>
</div>
<br />
<div class="container divider">

</div>
